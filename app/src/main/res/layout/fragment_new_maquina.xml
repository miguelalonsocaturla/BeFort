<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewMaquinaFragment">

    <!-- maquina_form_layout.xml -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Campo de texto para el nombre -->
        <EditText
            android:id="@+id/editTextNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Nombre de la máquina"
            android:inputType="text"
            android:paddingTop="10dp" />

        <!-- Campo de texto para el tipo -->
        <EditText
            android:id="@+id/editTextTipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Tipo de máquina"
            android:inputType="text" />

        <!-- Campo de texto para la descripción -->
        <EditText
            android:id="@+id/editTextDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Descripción de la máquina"
            android:inputType="textMultiLine"
            android:minLines="3" />

        <!-- Botón "Añadir" -->
        <Button
            android:id="@+id/buttonAgregar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#007BFF"
            android:paddingStart="24dp"
            android:paddingTop="12dp"
            android:paddingEnd="24dp"
            android:paddingBottom="12dp"
            android:text="Añadir"
            android:textColor="#FFFFFF" />

    </LinearLayout>



</FrameLayout>